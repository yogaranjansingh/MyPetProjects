<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
<class name="Question" table="questions">
 
<id name="id" column="id"  >
<generator class="assigned" />
</id>
 
<property name="question" column="question" />
<property name="a" column="a" />
<property name="b" column="b" />
<property name="c" column="c" />
<property name="d" column="d" />
<property name="answer" column = "answer"/>
 
</class>
</hibernate-mapping>